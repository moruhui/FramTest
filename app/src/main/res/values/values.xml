<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.CustomActionBar" parent="@style/AppTheme">
        <!--Menu的文字颜色-->
        <item name="actionMenuTextColor">@color/white</item>
        <!--Menu的文字样式-->
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <!--Title的文字样式-->
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <!--返回按钮样式-->
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <!--MenuItem按下样式-->
        <item name="selectableItemBackground">@drawable/action_button_bg</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minHeight">18sp</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>